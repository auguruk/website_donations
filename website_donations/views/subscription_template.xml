<odoo>
    <template id="subscription_form" name="Custom Stripe GBP Subscription">
        <section class="container mt-5 mb-5">
            <h2>Create Your Monthly GBP Subscription</h2>
            <p>Enter the monthly amount you want to contribute.</p>

            <form action="/custom/subscription/create" method="POST" class="mt-4">

                <div class="form-group mb-3">
                    <label>Email Address</label>
                    <input type="email" name="email" class="form-control" required="required"/>
                </div>

                <div class="form-group mb-3">
                    <label>Monthly Amount (GBP)</label>
                    <input type="number" name="amount" min="1" step="0.01" class="form-control" required="required"/>
                </div>

                <button type="submit" class="btn btn-primary">
                    Subscribe via Stripe
                </button>

            </form>
        </section>
    </template>
</odoo>
